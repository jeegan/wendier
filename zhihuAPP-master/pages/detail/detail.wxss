page {
  background-color: #f5f5f5;
}
.banner {
  position: relative;
  background-color: #999;
}
.banner-img {
  font-size: 0;
}
.banner-img image {
  width: 100%;
  max-width: 100%;
  height: 180px;
}
.banner .banner-title {
  position: absolute;
  bottom: 1rem;
  padding: 0 .5rem;
  color: #fff;
}

.editor {
  padding: .5rem;
}
.editor .editor-text {
  font-size: .7rem;
  color: #888;
}
.editor .editor-avatar {
  width: 2rem;
  height: 2rem;
  border-radius: 50%;
  margin-left: .5rem;
  vertical-align: middle;
}

.content {
  width: 95%;
  margin: 0 auto;
}
.list-wrapper {
  display: flex;
  justify-content: space-between;
  min-height: 3rem;
  padding: .5rem;
  margin-bottom: .5rem;
  box-shadow: 0 1px 2px rgba(0, 0, 0, .26);
  border-radius: 3px;
  background-color: #fff;
}
.list-title {
  font-size: .8rem;
}
.list-img {
  width: 5rem;
  font-size: 0;
}
.list-img image {
  width: 5rem;
  height: 5rem;
}
